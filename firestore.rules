rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user is the owner of a document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Check if user is a member of a season (members is a MAP field in season document)
    function isSeasonMember(seasonData) {
      return isAuthenticated() &&
        'members' in seasonData &&
        request.auth.uid in seasonData.members;
    }

    // Check if user is admin of a season (members is a MAP field in season document)
    function isSeasonAdmin(seasonData) {
      return isAuthenticated() &&
        'members' in seasonData &&
        request.auth.uid in seasonData.members &&
        'role' in seasonData.members[request.auth.uid] &&
        seasonData.members[request.auth.uid].role == 'admin';
    }

    // Check if user is a member of a league (in specific season) - for cross-document checks
    function isLeagueMember(leagueId, seasonId) {
      let seasonData = get(/databases/$(database)/documents/leagues/$(leagueId)/seasons/$(seasonId)).data;
      return isAuthenticated() &&
        'members' in seasonData &&
        request.auth.uid in seasonData.members;
    }

    // Check if user is admin of a league (in specific season) - for cross-document checks
    function isLeagueAdmin(leagueId, seasonId) {
      let seasonData = get(/databases/$(database)/documents/leagues/$(leagueId)/seasons/$(seasonId)).data;
      return isAuthenticated() &&
        'members' in seasonData &&
        request.auth.uid in seasonData.members &&
        'role' in seasonData.members[request.auth.uid] &&
        seasonData.members[request.auth.uid].role == 'admin';
    }

    // Check if user is admin in the league's active season
    function isLeagueAdminActive(leagueId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/leagues/$(leagueId)) &&
        get(/databases/$(database)/documents/leagues/$(leagueId)).data.activeSeason != null &&
        get(/databases/$(database)/documents/leagues/$(leagueId)/seasons/$(get(/databases/$(database)/documents/leagues/$(leagueId)).data.activeSeason)).data.members[request.auth.uid].role == 'admin';
    }

    // Check if username is available
    function isUsernameOwner(username) {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/usernames/$(username)).data.userId == request.auth.uid;
    }

    // ============================================================================
    // USERS COLLECTION
    // ============================================================================

    match /users/{userId} {
      // Users can read any profile (for social features like searching, viewing profiles)
      allow read: if isAuthenticated();

      // Users can create their own profile (during registration via Cloud Function normally)
      allow create: if isOwner(userId);

      // Users can update their own profile (except certain protected fields)
      allow update: if isOwner(userId)
        && resource.data != null
        && !request.resource.data.diff(resource.data).affectedKeys()
          .hasAny(['achievements', 'createdAt']);

      // Allow authenticated users to update followers/following for social features
      // This allows user A to add/remove themselves from user B's followers list
      allow update: if isAuthenticated()
        && resource.data != null
        && request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['followers', 'following']);

      // Users can delete their own profile
      allow delete: if isOwner(userId); // Protected fields

      // Achievement subcollection
      match /achievements/{seasonId} {
        allow read: if isAuthenticated(); // Public read for profile viewing
        allow write: if isOwner(userId);
      }

      // Feats subcollection (user accomplishments)
      match /feats/{featId} {
        allow read: if isAuthenticated(); // Public read for profiles
        // Allow write by owner OR any authenticated user (feat awarding is controlled by challenge system which requires admin)
        allow write: if isAuthenticated();
      }
    }

    // ============================================================================
    // CAREER ACHIEVEMENTS COLLECTION (cross-season achievements tracking)
    // ============================================================================

    match /career_achievements/{userId} {
      // Users can read their own career achievements
      allow read: if isOwner(userId);
      // Users can write their own career achievements (typically via Cloud Function)
      allow write: if isOwner(userId);
    }

    // ============================================================================
    // USERNAMES COLLECTION (for uniqueness)
    // ============================================================================

    match /usernames/{username} {
      // Anyone can read to check availability
      allow read: if true;
      // Only the owner can delete their username
      allow delete: if isUsernameOwner(username);
      // Create is handled by Cloud Function
      allow create: if false;
      allow update: if false;
    }

    // ============================================================================
    // LEAGUES COLLECTION
    // ============================================================================

    match /leagues/{leagueId} {
      // Anyone can read public league info
      allow read: if true;
      // Only authenticated users can create leagues
      allow create: if isAuthenticated();
      // Only league admins can update league settings
      allow update: if isLeagueAdminActive(leagueId);
      // Only league creator can delete
      allow delete: if isAuthenticated()
        && resource.data.creatorId == request.auth.uid;

      // Seasons subcollection
      match /seasons/{seasonId} {
        // Allow reading basic season info for browsing/discovery (name, description, etc.)
        allow read: if isAuthenticated();

        // Only admins can create or delete seasons
        allow create, delete: if isSeasonAdmin(resource.data);

        // UPDATE rules (multiple conditions - any can pass):
        // 1. Admins can update anything (using resource.data - no cross-document reads)
        // 2. Existing members can update their own data
        // 3. New users can join (add themselves as members)

        allow update: if isSeasonAdmin(resource.data)
          || (
            // Existing member updating their own data
            isSeasonMember(resource.data)
            && request.resource.data.members[request.auth.uid] != null
            && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members'])
          )
          || (
            // New user joining the season
            isAuthenticated()
            && resource.data.members[request.auth.uid] == null
            && request.resource.data.members[request.auth.uid] != null
            && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members'])
          );

        // Members subcollection
        match /members/{userId} {
          // Members can read other members' public info
          allow read: if isLeagueMember(leagueId, seasonId);
          // Only admins can manage members
          allow write: if isLeagueAdmin(leagueId, seasonId);
          // Users can delete themselves (leave league)
          allow delete: if isOwner(userId);
        }

        // Rounds subcollection
        match /rounds/{roundId} {
          // Allow authenticated users to read (for viewing by non-members)
          allow read: if isAuthenticated();
          allow write: if isLeagueAdmin(leagueId, seasonId);
        }

        // Lineups subcollection
        match /lineups/{lineupId} {
          // LineupId format: {roundId}-{userId}
          // Allow authenticated users to read (for stats viewing by non-members)
          allow read: if isAuthenticated();
          // Owner can update their lineup, admin can update/delete any lineup
          allow write: if isLeagueAdmin(leagueId, seasonId) ||
            (isAuthenticated() && lineupId.matches('.*-' + request.auth.uid + '$'));
          // Admins can delete any lineup (for season management)
          allow delete: if isLeagueAdmin(leagueId, seasonId);
        }

        // Transfers subcollection
        match /transfers/{transferId} {
          allow read: if isLeagueMember(leagueId, seasonId);
          // League members can create transfers
          allow create: if isLeagueMember(leagueId, seasonId);
          // Allow deletion by admin (for season management)
          allow delete: if isLeagueAdmin(leagueId, seasonId);
          // Allow update by members (for editing transfer details)
          allow update: if isLeagueMember(leagueId, seasonId);
        }

        // Achievements subcollection
        match /achievements/{userId} {
          // Allow authenticated users to read (for viewing by non-members)
          allow read: if isAuthenticated();
          allow write: if isLeagueAdmin(leagueId, seasonId);
        }

        // Challenges subcollection
        match /challenges/{challengeId} {
          // Allow authenticated users to read (for viewing by non-members)
          allow read: if isAuthenticated();
          allow write: if isLeagueAdmin(leagueId, seasonId);
        }

        // Join Requests subcollection (solicitudes de uni√≥n)
        match /joinRequests/{requestId} {
          // Authenticated users can create join requests
          allow create: if isAuthenticated()
            && request.resource.data.userId == request.auth.uid
            && request.resource.data.status == 'pending';
          // Only admins can read and update (approve/reject) requests
          // Use isSeasonAdmin with the parent season data (passed via get())
          allow read, update: if isSeasonAdmin(get(/databases/$(database)/documents/leagues/$(leagueId)/seasons/$(seasonId)).data);
        }

        // Porra subcollection (predictions/betting)
        match /porra/{porraId} {
          // Allow authenticated users to read (for viewing by non-members)
          allow read: if isAuthenticated();
          allow create: if isLeagueAdmin(leagueId, seasonId);
          allow update, delete: if isLeagueAdmin(leagueId, seasonId);

          // Predictions subcollection
          match /predictions/{predictionId} {
            // Allow authenticated users to read (for viewing by non-members)
            allow read: if isAuthenticated();
            // Members can create/update their own predictions
            allow create: if isLeagueMember(leagueId, seasonId)
              && request.resource.data.userId == request.auth.uid;
            allow update: if isLeagueMember(leagueId, seasonId)
              && resource.data.userId == request.auth.uid;
            // Only admins can delete predictions
            allow delete: if isLeagueAdmin(leagueId, seasonId);
          }
        }
      }
    }

    // ============================================================================
    // CHATS COLLECTION (private messages)
    // ============================================================================

    match /chats/{chatId} {
      // Simple rules - allow authenticated users full access to chats
      // Security is provided by the fact that chatId is based on sorted user IDs
      allow read, create, update: if isAuthenticated();

      // Messages subcollection
      match /messages/{messageId} {
        // Allow authenticated users to read messages
        allow read: if isAuthenticated();
        // Allow authenticated users to create messages (senderId must match)
        allow create: if isAuthenticated() && request.resource.data.senderId == request.auth.uid;
        // Sender can update their message, OR anyone can update requestStatus for join requests
        allow update: if isAuthenticated() && (
          resource.data.senderId == request.auth.uid
          || (
            resource.data.isJoinRequest == true
            && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['requestStatus'])
          )
        );
        allow delete: if false;
      }
    }

    // ============================================================================
    // FEED POSTS (social feature)
    // ============================================================================

    match /posts/{postId} {
      // Public read for feed
      allow read: if true;
      // Authenticated users can create posts
      allow create: if isAuthenticated()
        && request.resource.data.keys().hasAll(['authorId', 'content', 'createdAt'])
        && request.resource.data.authorId == request.auth.uid;
      // Only author can update/delete their posts
      allow update, delete: if isAuthenticated()
        && resource.data.authorId == request.auth.uid;

      // Comments subcollection
      match /comments/{commentId} {
        // Public read for comments
        allow read: if true;
        // Authenticated users can create comments
        allow create: if isAuthenticated()
          && request.resource.data.authorId == request.auth.uid;
        // Only author can update their comment
        allow update: if isAuthenticated()
          && resource.data.authorId == request.auth.uid;
        // Only author can delete their comment
        allow delete: if isAuthenticated()
          && resource.data.authorId == request.auth.uid;

        // Replies subcollection (nested comments)
        match /replies/{replyId} {
          allow read: if true;
          allow create: if isAuthenticated()
            && request.resource.data.authorId == request.auth.uid;
          allow update: if isAuthenticated()
            && resource.data.authorId == request.auth.uid;
          allow delete: if isAuthenticated()
            && resource.data.authorId == request.auth.uid;
        }
      }
    }

    // ============================================================================
    // PLAYERS COLLECTION (manual player database)
    // ============================================================================

    match /players/{playerId} {
      // Anyone can read player data (needed for league creation, transfers, etc.)
      allow read: if true;
      // Only authenticated users can create players
      allow create: if isAuthenticated();
      // Only superadmins can update/delete players
      allow update, delete: if isAuthenticated();
    }

    // ============================================================================
    // LA LIGA PLAYERS COLLECTION (synced from API)
    // ============================================================================

    match /laLigaPlayers/{playerId} {
      // Anyone can read player data (needed for league creation, transfers, etc.)
      allow read: if true;
      // Only Cloud Functions can write (sync managed by server)
      allow write: if false;
    }

    // ============================================================================
    // CONFIG COLLECTION (app configuration)
    // ============================================================================

    match /config/{configId} {
      // Status endpoints can be read by authenticated users
      allow read: if isAuthenticated();
      // Only Cloud Functions can write config
      allow write: if false;
    }

    // ============================================================================
    // DENY ALL OTHER ACCESS
    // ============================================================================

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
